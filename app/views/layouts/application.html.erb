<!DOCTYPE html>
<html>
  <head>
    <title>QuestionApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <h3><%= link_to "question-app", root_path %></h3>
            <% if logged_in? && current_user.admin == true %>
              <%= link_to "管理者ログアウト", logout_path, method: :delete , class: "top-page"%>
            <% else %>
              <span><%= link_to "管理者ログイン", admin_login_path , class: "top-page"%></span>
            <% end %>
          </div>
          <div class="d-flex align-items-center">
          <div class="login-content">
            <%= link_to "質問投稿", new_question_path %>
          </div>
          <div class="login-content">
            <% if logged_in? && current_user.admin == false %>
              <%= link_to "ログアウト", logout_path, method: :delete %>
              <%= image_tag current_user.image,class: "rounded-circle" if current_user.image.attached? %>
            <% else %>
              <%= link_to "ログイン", login_path %>
              <%= link_to "新規登録", new_user_path %>
            <% end %>
          </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
