<main>
  <h2>新規登録</h2><br>
  <div class="user-sain">
    <%= form_with model: @user,url: users_path, local: true do |f| %>
      <div class="user-image">
        <%= f.label :image %><br />
        <%= f.file_field :image %>
        <div id="image-list"></div>
      </div>
      <div class="field">
        <%= f.label :nickname %><br />
        <%= f.text_field :nickname, autofocus: true ,class: "form-field"%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-field" %>
      </div>

      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, autocomplete: "new-password",class: "form-field" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-field"%>
      </div>
      <br />
      <div class="sub-btn">
      <%= f.submit "登録",class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</main>

